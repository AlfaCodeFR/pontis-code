{
  "name": "pontis-code",
  "displayName": "Pontis Code",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.translateJavaToCSharp",
        "title": "Pontis Code: Translate Java to C#"
      },
      {
        "command": "extension.translateCSharpToJava",
        "title": "Pontis Code: Translate C# to Java"
      },
      {
        "command": "extension.showTranslatorPanel",
        "title": "Pontis: Open Translator Panel"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "extension.translateJavaToCSharp",
          "when": "editorHasSelection",
          "group": "navigation"
        },
        {
          "command": "extension.translateCSharpToJava",
          "when": "editorHasSelection",
          "group": "navigation"
        },
        {
          "command": "extension.showTranslatorPanel",
          "when": "editorHasSelection",
          "group": "navigation"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "pontisPanel",
          "title": "Pontis",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "pontisPanel": [
        {
          "id": "pontis.translatorView",
          "name": "Translator"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.100.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "axios": "^1.9.0",
    "node-fetch": "^3.3.2"
  }
}
